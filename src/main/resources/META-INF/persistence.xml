<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="me">
		<non-jta-data-source>java:comp/env/jdbc/me</non-jta-data-source>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" /> <!-- dev -->
			<property name="hibernate.show_sql" value="true" /> <!-- dev -->
			<property name="hibernate.format_sql" value="true" /> <!-- dev -->
		</properties>
	</persistence-unit>
</persistence>